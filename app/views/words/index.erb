<a class="navs" href="/words/new">Add New Word</a>
<h1 class="header">Words</h1>

<table class="table">
  <thead>
    <th>Text</th>
    <th>Letters</th>
    <th>Edit</th>
    <th>Delete</th>
  </thead>
  <tbody>
    <% @words.each do |word| %>
      <tr>
        <td><a href="<%= "/words/#{word.id}" %>"><%= word.text %></a>
        </td>
        <td><%= word.letters %></td>
        <td><a href="<%= "/words/#{word.id}/edit" %>">Edit</a></td>
          <td>
            <form action="<%= "/words/#{word.id}" %>" method="post">
              <input type="hidden" name="_method" value="delete" />
              <button class="button" type="submit">Delete</button>
            </form>
        </tr>
      <% end %>
    </tbody>
  </table>